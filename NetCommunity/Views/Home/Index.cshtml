@model NetCommunity.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Välkommen till Nätverket</h1>
    <h2>@Html.DisplayFor(model => model.UserName)</h2>

    <p>Du har  @Html.DisplayFor(model => model.UnreadMessages) olästa medelanden </p>

    @if (Model.Logins >= 1) { 
    
        <p>Du var senast här @Html.DisplayFor(model => model.LoginTime)</p>

        <p>Du har vart här @Html.DisplayFor(model => model.Logins) gånger den senaste månaden! </p>
    }
    else
    {
        <p>Detta är första gången du är här!</p>
    }
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Skicka Meddelande</h2>
        <p>
            Info om att skicka.
        </p>
        <p><a class="btn btn-default" href="/Send/index">Send &raquo;</a></p>

    </div>
    <div class="col-md-4">
        <h2>Läs meddelande</h2>
        <p>            Info om att Läsa.</p>
        <p><a class="btn btn-default" href="/messages/index">Read &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Grupper</h2>
        <p>Info om grupper.</p>
        <p><a class="btn btn-default" href="/groups/index">Read &raquo;</a></p>
    </div>
</div>